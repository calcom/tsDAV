{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
